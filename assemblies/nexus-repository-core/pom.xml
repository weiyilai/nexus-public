  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-enforcer-plugin</artifactId>
        <executions>
          <execution>
            <id>enforce-dependencies</id>
            <goals>
              <goal>enforce</goal>
            </goals>
            <configuration>
              <fail>true</fail>
              <rules>
                <bannedDependencies>
                  <searchTransitive>true</searchTransitive>
                  <excludes combine.children="append">
                    <!-- Ban private -->
                    <exclude>com.sonatype.nexus*</exclude>
                  </excludes>
                </bannedDependencies>
              </rules>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <configuration>
          <excludePackageNames>org.sonatype.nexus.bootstrap.*</excludePackageNames>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>uberjar</id>
            <phase>package</phase>
            <goals>
              <goal>repackage</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <configuration>
          <executable>java</executable>
          <workingDirectory>${project.build.directory}/assembly</workingDirectory>
          <arguments>
            <argument>-jar</argument>
            <argument>${project.build.directory}/${project.build.finalName}.jar</argument>
          </arguments>
          <environmentVariables>
            <!-- Used by the `?debug` mode to allow javascript resources to be loaded from the filesystem -->
            <NEXUS_RESOURCE_DIRS>${project.parent.basedir}/components/nexus-base/src/main/resources,${project.parent.basedir}/components/nexus-rapture/src/main/resources,${project.parent.basedir}/plugins/nexus-coreui-plugin/src/main/resources,${project.parent.basedir}/plugins/nexus-onboarding-plugin/src/main/resources,${project.parent.basedir}/plugins/nexus-repository-maven/src/main/resources,${project.parent.basedir}/components/nexus-ui-plugin/target/classes,${project.parent.basedir}/components/nexus-rapture/target/classes,${project.parent.basedir}/plugins/nexus-coreui-plugin/target/classes</NEXUS_RESOURCE_DIRS>
            <!-- Used to disable the random password generation, and default to admin/admin123 for easy development -->
            <NEXUS_SECURITY_RANDOMPASSWORD>false</NEXUS_SECURITY_RANDOMPASSWORD>
          </environmentVariables>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <!-- parent pom sets this execution up in pluginManagement, so it will autorun by including the plugin-->
          <!-- which we don't want for this assembly as we have our own antrun execution doing the work -->
          <execution>
            <id>overlay-assembly</id>
            <configuration>
              <skip>true</skip>
            </configuration>
          </execution>
          <execution>
            <id>customize-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <unzip src="${org.sonatype.nexus.assemblies:nexus-base-overlay:zip}"
                       dest="${project.build.directory}/assembly"
                       overwrite="true">
                  <patternset>
                    <exclude name="*/lib/**"/>
                    <exclude name="sonatype-work/**"/>
                  </patternset>
                  <cutdirsmapper dirs="1"/>
                </unzip>

                <unzip src="${org.sonatype.nexus.assemblies:nexus-base-overlay:zip}"
                       dest="${project.build.directory}/sonatype-work"
                       overwrite="true">
                  <patternset>
                    <include name="sonatype-work/**"/>
                  </patternset>
                  <cutdirsmapper dirs="1"/>
                </unzip>

                <!-- overlay customizations -->
                <copy todir="${project.build.directory}/assembly" overwrite="true">
                  <fileset dir="${project.basedir}/src/main/assembly/overlay"/>
                </copy>

                <!-- workaround maven-assembly-plugin bug where lineEnding configuration for fileSets is ineffective -->
                <fixcrlf srcdir="${project.build.directory}/assembly/bin" includes="*" excludes="*.bat" eol="unix"/>
                <fixcrlf srcdir="${project.build.directory}/assembly/bin" includes="*.bat" eol="dos"/>

                <!-- and don't forget the uberjar -->
                <copy file="${project.build.directory}/${project.artifactId}-${project.version}.jar"
                      todir="${project.build.directory}/assembly/bin" overwrite="true"/>
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>run</id>
      <build>
        <defaultGoal>exec:exec</defaultGoal>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
