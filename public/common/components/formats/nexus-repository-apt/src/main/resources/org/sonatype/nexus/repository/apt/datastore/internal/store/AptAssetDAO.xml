<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.sonatype.nexus.repository.apt.datastore.internal.store.AptAssetDAO">

  <!--
    Browses Package index metadata assets for a given repository and distribution.
    Returns all assets with paths matching /dists/{distribution}/main/binary-% that have no component_id.
  -->
  <select id="browsePackageIndexAssets" resultType="AssetData">
    SELECT * FROM apt_asset
    WHERE repository_id = #{repositoryId}
      AND path LIKE #{pathPattern}
      AND component_id IS NULL
      <if test="continuationToken != null"> AND asset_id > #{continuationToken}</if>
    ORDER BY asset_id
    LIMIT #{limit}
  </select>

</mapper>