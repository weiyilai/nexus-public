<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sonatype.nexus.ssl.plugin.internal.keystore.TrustedSSLCertificateDAO">

  <insert id="createSchema">
    CREATE TABLE IF NOT EXISTS trusted_ssl_certificate (
      alias    VARCHAR(400)   NOT NULL,
      pem      VARCHAR   NOT NULL,
      CONSTRAINT pk_trusted_ssl_certificate_alias PRIMARY KEY (alias)
      );
  </insert>

  <select id="find" resultType="TrustedSSLCertificateData">
    SELECT * FROM trusted_ssl_certificate WHERE alias = #{alias};
  </select>

  <select id="findAll" resultType="TrustedSSLCertificateData">
    SELECT * FROM trusted_ssl_certificate;
  </select>

  <insert id="save" parameterType="TrustedSSLCertificateData">
    MERGE INTO trusted_ssl_certificate (alias, pem) VALUES (#{alias}, #{pem});
  </insert>

  <insert id="save" parameterType="TrustedSSLCertificateData" databaseId="PostgreSQL">
    INSERT INTO trusted_ssl_certificate (alias, pem) VALUES (#{alias}, #{pem})
      ON CONFLICT (alias) DO UPDATE SET pem = #{pem};
  </insert>

  <delete id="delete">
    DELETE FROM trusted_ssl_certificate WHERE alias = #{alias};
  </delete>

</mapper>
